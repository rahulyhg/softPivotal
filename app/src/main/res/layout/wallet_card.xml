<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:contentPadding="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageWallet"
            android:layout_width="60dp"
            android:layout_height="60dp"
            card_view:srcCompat="@drawable/ic_correct"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/bonusType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Bonus"
            android:textColor="#3f3f48"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/BAmountlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                card_view:srcCompat="@drawable/ic_inr" />

            <TextView
                android:id="@+id/txtbonusamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bonusamount"
                android:textColor="#3f3f48"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>